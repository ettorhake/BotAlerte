{
  "monitor_name": "Exemple - Surveillance produits",
  "description": "Configuration d'exemple pour surveiller des produits en ligne",
  "websites": [
    {
      "name": "Site Example",
      "url": "https://example-website.com/category",
      "enabled": true,
      "search_terms": [
        "mot-cle-exemple"
      ],
      "selectors": {
        "product_containers": [
          ".product-item",
          ".product-card",
          ".item",
          "[class*='product']",
          ".listing-item",
          ".grid-item"
        ],
        "title": [
          "h2",
          "h3",
          ".title",
          ".name",
          "[class*='title']",
          "[class*='name']"
        ],
        "price": [
          ".price",
          "[class*='price']",
          ".cost",
          "[class*='cost']"
        ],
        "link": [
          "a[href]"
        ],
        "description": [
          ".description",
          ".desc",
          "[class*='description']"
        ]
      },
      "custom_headers": {
        "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
      },
      "wait_between_requests": 2
    }
  ],
  "email_settings": {
    "sender_email": "votre-email@gmail.com",
    "sender_password": "",
    "recipient_emails": [
      "destinataire@example.com"
    ],
    "smtp_server": "smtp.gmail.com",
    "smtp_port": 587,
    "subject_template": "üîç ALERTE {search_term} d√©tect√© sur {website_name}! ({count} produit(s))",
    "send_summary": true
  },
  "monitoring_settings": {
